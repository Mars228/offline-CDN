<footer class="bottom">

	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<span class="copyright"><%= data.site.copyright.year %> <%= data.site.copyright.owner %> <%= Time.now.year %></span>
			</div>
			<div class="col-md-6  text-right">
				<ul class="list-inline social-buttons">
					<% data.site.social_media.each do |item| %>
					<li><a href="<%= item[:link] %>"><i class="fa fa-<%= item[:media] %>"></i></a></li>
                	<% end %>
				</ul>
			</div>

		</div>
	</div>

</footer>

<a class="scrollup"><i class="fa fa-chevron-up"></i></a>

<div id="loader">
	<div class="spinner">
		<div class="dot1"></div>
		<div class="dot2"></div>
	</div>
</div>